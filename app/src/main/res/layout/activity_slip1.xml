<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/colorWhite"
            android:text="单个条目展示"/>

    </LinearLayout>
    <com.example.administrator.sideslipitemdemo.SideSlipItem
        android:id="@+id/slide_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_swipe_delete"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/delete_tv_bg_selector"
            android:gravity="center"
            android:text="删除"
            android:textColor="#fff"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/long_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/common_item_bg_selector"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="item"
                android:textSize="19sp"
                />
        </LinearLayout>

    </com.example.administrator.sideslipitemdemo.SideSlipItem>

</LinearLayout>